<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="InterfazMAUI.Register"
             Title="Registro"
             BackgroundColor="#f0f0f0">

    <ScrollView>
        <VerticalStackLayout Spacing="20" Padding="30" VerticalOptions="Center">

            <Label Text="Crear Cuenta"
                   FontSize="32"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   TextColor="#333333"/>

            <Label Text="Regístrate para continuar"
                   FontSize="16"
                   HorizontalOptions="Center"
                   TextColor="#666666"
                   Margin="0,0,0,20"/>

            <Entry x:Name="txtUsername"
                   Placeholder="Nombre de usuario"
                   Keyboard="Text"
                   BackgroundColor="White"
                   TextColor="Black"/>

            <Entry x:Name="txtEmail"
                   Placeholder="Correo electrónico (Gmail)"
                   Keyboard="Email"
                   BackgroundColor="White"
                   TextColor="Black"/>

            <Entry x:Name="txtPassword"
                   Placeholder="Contraseña"
                   IsPassword="True"
                   BackgroundColor="White"
                   TextColor="Black"/>

            <Entry x:Name="txtConfirmPassword"
                   Placeholder="Confirmar contraseña"
                   IsPassword="True"
                   BackgroundColor="White"
                   TextColor="Black"/>

            <Button x:Name="btnRegister"
                    Text="REGISTRARSE"
                    BackgroundColor="#007BFF"
                    TextColor="White"
                    HeightRequest="50"
                    CornerRadius="10"
                    FontAttributes="Bold"
                    Clicked="BtnRegister_Clicked"/>

            <HorizontalStackLayout HorizontalOptions="Center" Spacing="5">
                <Label Text="¿Ya tienes cuenta?" TextColor="Gray"/>
                <Label Text="Inicia sesión aquí" 
                       TextColor="#007BFF" 
                       TextDecorations="Underline">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped"/>
                    </Label.GestureRecognizers>
                </Label>
            </HorizontalStackLayout>

            <ActivityIndicator x:Name="loadingIndicator"
                               IsRunning="False"
                               IsVisible="False"
                               Color="#007BFF"/>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>