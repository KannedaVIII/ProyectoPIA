<Window x:Class="InterfazWPF.AddVideojuegos"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InterfazWPF"
        mc:Ignorable="d"
        Title="Añadir Nuevo Juego" Height="450" Width="400"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize" Background="#F0F2F5">

    <Grid Margin="20">
        <StackPanel VerticalAlignment="Center">

            <TextBlock Text="Nuevo Videojuego" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20" Foreground="#1F2937"/>

            <!-- CAMPO 1: TÍTULO -->
            <TextBlock Text="Título:" FontWeight="SemiBold"/>
            <TextBox x:Name="txtTitulo" Height="25" Margin="0,5,0,10" Padding="2"/>

            <!-- CAMPO 2: GÉNERO -->
            <TextBlock Text="Género:" FontWeight="SemiBold"/>
            <TextBox x:Name="txtGenero" Height="25" Margin="0,5,0,10" Padding="2"/>

            <!-- CAMPO 3: FECHA DE SALIDA -->
            <TextBlock Text="Fecha de Salida (ej. Feb 25, 2022):" FontWeight="SemiBold"/>
            <TextBox x:Name="txtFecha" Height="25" Margin="0,5,0,10" Padding="2"/>

            <!-- CAMPO 4: EQUIPO -->
            <TextBlock Text="Equipo / Desarrollador:" FontWeight="SemiBold"/>
            <TextBox x:Name="txtEquipo" Height="25" Margin="0,5,0,10" Padding="2"/>

            <!-- CAMPO 5: RATING -->
            <TextBlock Text="Rating (0.0 - 5.0):" FontWeight="SemiBold"/>
            <TextBox x:Name="txtRating" Height="25" Margin="0,5,0,20" Padding="2"/>

            <!-- BOTONES -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                <Button x:Name="btnCancelar" Content="Cancelar" Width="100" Height="30" Margin="0,0,10,0" Click="btnCancelar_Click" Background="#E5E7EB" BorderThickness="0"/>
                <Button x:Name="btnAceptar" Content="Añadir Juego" Width="100" Height="30" Click="btnAceptar_Click" Background="#10B981" Foreground="White" FontWeight="Bold" BorderThickness="0"/>
            </StackPanel>

        </StackPanel>
    </Grid>
</Window>