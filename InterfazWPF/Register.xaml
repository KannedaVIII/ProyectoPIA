<Window x:Class="InterfazWPF.Register"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InterfazWPF"
        mc:Ignorable="d"
        Title="Registro de Usuario" Height="500" Width="400"
        WindowStartupLocation="CenterScreen"
        FontFamily="Segoe UI" Background="#F0F2F5"
        ResizeMode="NoResize">

    <Window.Resources>
        <Style x:Key="TextBoxStyle" TargetType="TextBox">
            <Setter Property="Height" Value="38"/>
            <Setter Property="Padding" Value="10,0,10,0"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#D1D5DB"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="0,5,0,15"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type TextBoxBase}">
                        <Border x:Name="Border"
                                CornerRadius="5"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Padding="{TemplateBinding Padding}">
                            <ScrollViewer x:Name="PART_ContentHost" Focusable="False" HorizontalScrollBarVisibility="Hidden" VerticalScrollBarVisibility="Hidden"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="BorderBrush" Value="#9CA3AF"/>
                            </Trigger>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="Border" Property="BorderBrush" Value="#3B82F6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="PasswordBoxStyle" TargetType="PasswordBox">
            <Setter Property="Height" Value="38"/>
            <Setter Property="Padding" Value="10,0,10,0"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#D1D5DB"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="0,5,0,15"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type PasswordBox}">
                        <Border x:Name="Border"
                                CornerRadius="5"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Padding="{TemplateBinding Padding}">
                            <ScrollViewer x:Name="PART_ContentHost" Focusable="False" HorizontalScrollBarVisibility="Hidden" VerticalScrollBarVisibility="Hidden"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="BorderBrush" Value="#9CA3AF"/>
                            </Trigger>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="Border" Property="BorderBrush" Value="#3B82F6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#3B82F6"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Height" Value="45"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Background="{TemplateBinding Background}" CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2563EB"/>
                </Trigger>
            </Style.Triggers>
        </Style>

    </Window.Resources>

    <Grid Margin="0,0,0,-6">
        <Border Background="White" Width="320" Height="515" CornerRadius="10" Padding="25" VerticalAlignment="Center" HorizontalAlignment="Center">
            <Border.Effect>
                <DropShadowEffect Color="#000000" Direction="270" ShadowDepth="2" BlurRadius="10" Opacity="0.1"/>
            </Border.Effect>

            <StackPanel>

                <TextBlock Text="🔒 Crear Cuenta" 
                           FontSize="24" 
                           FontWeight="Bold" 
                           Foreground="#111827" 
                           HorizontalAlignment="Center" 
                           Margin="0,0,0,25"/>

                <TextBlock Text="Nombre de Usuario:" FontSize="13" Foreground="#374151"/>
                <TextBox Style="{StaticResource TextBoxStyle}" x:Name="txtUsername" ToolTip="Introduce tu nombre de usuario"/>

                <TextBlock Text="Correo Electrónico:" FontSize="13" Foreground="#374151"/>
                <TextBox Style="{StaticResource TextBoxStyle}" x:Name="txtEmail" ToolTip="Introduce una dirección de correo válida"/>

                <TextBlock Text="Contraseña:" FontSize="13" Foreground="#374151"/>
                <PasswordBox Style="{StaticResource PasswordBoxStyle}" x:Name="pbPassword" ToolTip="Introduce una contraseña segura"/>

                <TextBlock Text="Confirmar Contraseña:" FontSize="13" Foreground="#374151"/>
                <PasswordBox Style="{StaticResource PasswordBoxStyle}" x:Name="pbConfirmPassword" ToolTip="Repite la contraseña"/>

                <Button Content="Registrarse" Style="{StaticResource PrimaryButtonStyle}" Margin="0,10,0,0" x:Name="btnRegister"/>

                <TextBlock HorizontalAlignment="Center" Margin="0,15,0,0" FontSize="12">
                    <Run Text="¿Ya tienes cuenta?" Foreground="#6B7280"/>
                    <Hyperlink Foreground="#3B82F6" RequestNavigate="Hyperlink_RequestNavigate" NavigateUri="Login.xaml">
                        Iniciar Sesión
                    </Hyperlink>
                </TextBlock>

            </StackPanel>
        </Border>
    </Grid>
</Window>